@model IEnumerable<CadastroClientes.Models.Fornecedor>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h1>Cadastro de fornecedores</h1>

<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Buscar por nome">
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

<div class="d-flex justify-content-left mb-3">
    <a asp-action="Create" class="btn btn-success">Cadastrar novo fornecedor</a>
</div>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Segmento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CEP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FotoUsuario)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNPJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Segmento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CEP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    <div class="border rounded" style="width: 70px; height: 70px; overflow: hidden;">
                        <img src="@item.FotoUsuarioPath" alt="Foto do Fornecedor" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;" />
                    </div>
                </td>
                <td>
                    <div class="d-flex justify-content-between my-3">
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary me-2">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-warning me-2">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Excluir</a>
                    </div>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center">Nenhum fornecedor encontrado</td>
            </tr>
        }
    </tbody>
</table>
